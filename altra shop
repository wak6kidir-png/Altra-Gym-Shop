  <script>
    // ===== config =====
    const WHATSAPP_NUMBER_E164 = "60172028708"; // Malaysia +60, remove leading 0
    const defaultIntro = "Hi Altra Shop! Saya nak buat order üëá";
    // ==================

    const yearEl = document.getElementById('year');
    if (yearEl) yearEl.textContent = new Date().getFullYear();

    function productToLine(card){
      const name = card.dataset.name || 'Item';
      const sku = card.dataset.sku || '';
      const price = parseFloat(card.dataset.price || '0').toFixed(2);
      const qty = Math.max(1, parseInt(card.querySelector('.count')?.value || '1', 10));
      // try to pick the first <select> value as variant (e.g., size/flavour)
      const select = card.querySelector('select');
      const variant = select ? ` (${select.value})` : '';
      const subtotal = (qty * parseFloat(price)).toFixed(2);
      return `‚Ä¢ ${name}${variant} [${sku}] √ó ${qty} ‚Äî RM ${subtotal}`;
    }

    function buildMessage(selectedCards){
      const lines = [defaultIntro, ""];
      let grand = 0;
      selectedCards.forEach(card=>{
        const price = parseFloat(card.dataset.price || '0');
        const qty = Math.max(1, parseInt(card.querySelector('.count')?.value || '1', 10));
        grand += price * qty;
        lines.push(productToLine(card));
      });
      lines.push("");
      lines.push(`Total anggaran: RM ${grand.toFixed(2)}`);
      lines.push("");
      lines.push("Nama:");
      lines.push("Alamat:");
      lines.push("Cara bayar (FPX/Transfer/Tunai):");
      return lines.join('\n');
    }

    function openWhatsAppWith(cards){
      const text = buildMessage(cards);
      const url = `https://wa.me/${WHATSAPP_NUMBER_E164}?text=${encodeURIComponent(text)}`;
      window.open(url, '_blank');
    }

    // Bind plus/minus & Buy buttons
    document.querySelectorAll('.card').forEach(card=>{
      const minus = card.querySelector('.minus');
      const plus = card.querySelector('.plus');
      const input = card.querySelector('.count');
      minus?.addEventListener('click', ()=>{ input.value = Math.max(1, (parseInt(input.value||'1',10)-1)); });
      plus?.addEventListener('click', ()=>{ input.value = Math.max(1, (parseInt(input.value||'1',10)+1)); });
      card.querySelector('.buy')?.addEventListener('click', ()=> openWhatsAppWith([card]));
    });

    // Floating CTA & header chat button open WhatsApp with all items that have qty>=1 (defaults to 1)
    const bottomBtn = document.getElementById('open-whatsapp-bottom');
    const topBtn = document.getElementById('open-whatsapp-top');
    const linkText = document.getElementById('whats-link');

    function openWithAll(){
      const cards = Array.from(document.querySelectorAll('.card'));
      openWhatsAppWith(cards);
    }
    bottomBtn?.addEventListener('click', openWithAll);
    topBtn?.addEventListener('click', openWithAll);
    linkText?.addEventListener('click', (e)=>{ e.preventDefault(); openWithAll(); });
  </script>
